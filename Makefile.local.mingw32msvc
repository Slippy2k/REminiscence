
# PATH=/opt/mingw32msvc/bin:$PATH make

MINGW_DIR = /opt/mingw32msvc

SDL_CFLAGS = `$(MINGW_DIR)/bin/sdl-config --cflags`
SDL_LIBS = `$(MINGW_DIR)/bin/sdl-config --static-libs`

CXX = i586-mingw32msvc-g++
CXXFLAGS += -I$(MINGW_DIR)/include
LDFLAGS += -L$(MINGW_DIR)/lib

LIBS = -static $(SDL_LIBS) -lvorbisidec -logg -lz

rs.exe: rs
	i586-mingw32msvc-strip -o $@ $^

